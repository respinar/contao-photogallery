<?php $this->extend('block_unsearchable'); ?>

<?php $this->block('content'); ?>

  <?php if (empty($this->albums)): ?>
    <p class="empty"><?php echo $this->empty; ?></p>
  <?php else: ?>
    <div class="albums_list">
      <?php foreach($this->albums as $albums) { echo '<div class="row">'.implode('', $albums).'</div>'; } ?>
    </div>
    <?php echo $this->pagination; ?>
  <?php endif; ?>

<?php $this->endblock(); ?>
